<%= form_tag search_user_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>   
    <%= submit_tag "Поиск!" %>
  </p>
<% end %>

<% @users.each do |user| %>
<% if user.id != current_user.id %>
<h4> <%= user.email %>  </h4> 
 <% if @friends.find_by(:friend_id => user.id).nil? %>
 <%= link_to 'Add ', friend_create_user_path(user.id), class: "btn btn-sm btn-primary " %>
 <%else %>
 	уже в друзьях
 <% end %>

<% end %>
<% end %>